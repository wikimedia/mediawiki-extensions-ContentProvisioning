{
	"name": "mediawiki/content-provisioning",
	"type": "mediawiki-extension",
	"description": "...",
	"license": "GPL-3.0-only",
	"authors": [
		{
			"name": "Hallo Welt! GmbH",
			"email": "info@hallowelt.com",
			"homepage": "https://www.hallowelt.com"
		}
	],
	"extra": {
		"installer-name": "ContentProvisioning"
	},
	"require": {
		"composer/installers": "~1.0|~2",
		"mwstake/mediawiki-component-contentprovisioner": "~3",
		"mwstake/mediawiki-component-datastore": "~2",
		"mwstake/mediawiki-component-commonwebapis": "~3"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "38.0.0",
		"mediawiki/minus-x": "1.1.0",
		"php-parallel-lint/php-console-highlighter": "0.5.0",
		"php-parallel-lint/php-parallel-lint": "1.2.0"
	},
	"scripts": {
		"test": [
			"parallel-lint . --exclude vendor --exclude node_modules",
			"minus-x check .",
			"phpcs -p -s"
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		]
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true
		}
	}
}
